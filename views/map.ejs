<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pothole Map</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <style>
        #map {
            height: 100vh;
        }
    </style>
</head>
<body>
<div id="map"></div>
<script>
    const map = L.map('map').setView([35.0456, -85.3097], 13); // Centered on Chattanooga

    // Use a dark tile layer
    L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>'
    }).addTo(map);

    fetch('/api/potholes')
        .then(response => response.json())
        .then(data => {
            console.log('Fetched data:', data); // Debugging statement
            data.forEach(pothole => {
                if (pothole.coordinates && pothole.coordinates.lat && pothole.coordinates.lng && pothole.prediction_results.length > 0) {
                    console.log('Adding marker for pothole:', pothole); // Debugging statement
                    L.circleMarker([pothole.coordinates.lat, pothole.coordinates.lng], {
                        radius: 5,
                        color: 'blue',
                        fillColor: 'blue',
                        fillOpacity: 1
                    }).addTo(map)
                        .bindPopup(`
                            <b>ID:</b> ${pothole._id}<br>
                            <b>Confidence:</b> ${pothole.prediction_results[0].confidence}<br>
                            <b>Outcome:</b> ${pothole.prediction_results[0].outcome}<br>
                            <img src="${pothole.image_uri}" alt="Pothole Image" style="width:100%;height:auto;">
                        `);
                } else {
                    console.warn('Pothole with missing coordinates or empty prediction results:', pothole); // Debugging statement
                }
            });
        })
        .catch(error => console.error('Error fetching JSON data:', error));
</script>
</body>
</html>