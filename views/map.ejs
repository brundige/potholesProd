<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pothole Map</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"/>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden;
        }

        #map {
            height: 100vh;
        }

        header {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            background-color: rgba(2, 33, 43, 0.15);
            font-family: Arial, sans-serif;
            color: #00435d;
            z-index: 1000; /* Ensure the header is on top */
        }

        header img {
            height: 50px;
            margin-right: 20px;
        }

        header h1 {
            margin: 0;
            font-size: 24px;
        }

        .search-bar {
            margin-right: 100px;
            display: flex;
            align-items: center;
        }

        .search-bar input {
            padding: 5px;
            font-size: 16px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #4a90e2; /* Thin border */
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: rgba(237, 237, 237, 0.83);
        }
        .inline {
            display: flex;
            align-items: center;
        }

        #info-panel {
            position: absolute;
            font-family: Roboto, sans-serif;
            top: 150px;
            right: 50px;
            width: 20vw;
            height: 80vh;
            background-color: rgba(33, 32, 32, 0.21);
            padding: 20px;
            box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
            overflow-y: auto;
            z-index: 1000;
            color: #357ab8;
        }

        #score {
            color: #d8be12;
            padding: 10px;
        }
    </style>
</head>
<body>
<header>
    <div class="inline">
        <img src="/citylogo.png" alt="City Logo">
        <h1>City of Chattanooga | Roadways</h1>
    </div>
    <div class="search-bar">
        <input type="text" placeholder="Search..." id="search-input">
    </div>
</header>
<div id="map"></div>
<div id="info-panel">
    <div class="inline">
        <h2>Road Information | </h2>
        <h2 id="score">44</h2>
    </div>
    <h2 id="road-name">East Main</h2>
    <img src="/pothole.jpg" alt="Pothole Image Preview" style="width:100%;height:auto;"/>

    <hr>
    <p id="object-count">Detected Objects: 1</p>
    <table>
        <thead>
        <tr>
            <th>Detection Type</th>
            <th>Prevalence</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Pothole</td>
            <td>1</td>
        </tr>
        </tbody>
    </table>
    <p id="condition-index">Condition Index: 0.95</p>
</div>

<script>
    const map = L.map('map').setView([35.0456, -85.3097], 13);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
    }).addTo(map);

    fetch('/potholes')
        .then(response => response.json())
        .then(data => {
            data.forEach(pothole => {
                const marker = L.marker([pothole.coordinates.lat, pothole.coordinates.lng]).addTo(map);
                marker.on('click', () => {
                    document.getElementById('road-name').innerText = pothole.street_name;
                    document.getElementById('score').innerText = Math.floor(pothole.conditionIndex * 100);
                    document.getElementById('object-count').innerText = `Detected Objects: ${pothole.prediction_results.length}`;
                    document.getElementById('condition-index').innerText = `Condition Index: ${pothole.conditionIndex}`;
               table.innerHTML = '';
                    pothole.prediction_results.forEach(object => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${object.type}</td>
                            <td>${object.prevalence}</td>
                        `;
                        table.appendChild(row);
                    });

                    document.querySelector('img').src = pothole.image_uri;
                });
            });
        })
        .catch(error => console.error('Error fetching pothole data:', error));

    document.getElementById('search-input').addEventListener('input', event => {
        const query = event.target.value.toLowerCase();
        potholes.forEach(pothole => {
            const marker = pothole.marker;
            if (pothole.name.toLowerCase().includes(query)) {
                marker.addTo(map);
            } else {
                marker.removeFrom(map);
            }
        });
    });
</script>
</body>
</html>